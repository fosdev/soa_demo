<h1>Listing visits</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Day</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% visits.each do |visit| %>
  <tr>
    <td><%= visit.name %></td>
    <td><%= visit.description %></td>
    <td><%= visit.day %></td>
    <td><%= link_to 'Show', visit %></td>
    <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
    <td><%= link_to 'Destroy', visit, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

